<%= render 'error_messages', record: @expense %>

<%= form_for @expense do |f| %>
<div>
  <%= f.label :value %>
  <%= f.text_field :value %>
</div>
<div>
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>
<div>
  <%= f.label :card %>
  <%= f.check_box :card %>
</div>

<div>
  <%= f.submit %> | <%= link_to 'actions.back', root_path %>
</div>
<% end %>
