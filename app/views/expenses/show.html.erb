<p>
  <strong><%= t('labels.expense.show.value') %>:</strong>
  <%= @expense.value %>
</p>

<p>
  <strong><%= t('labels.expense.show.description') %>:</strong>
  <%= @expense.description %>
</p>

<p>
  <strong><%= t('labels.expense.show.card') %>:</strong>
  <%= @expense.user.email %>
</p>

<p>
  <strong><%= t('labels.expense.show.date') %>:</strong>
  <%= @expense.created_at.strftime("%d %b. %Y") %>
</p>

<%= link_to t('actions.edit'), edit_expense_path, class: 'btn btn-default btn-lg' %>
<%= link_to t('actions.destroy'), expense_path(@expense), method: :delele,
   data: { confirm: 'Deseja excluir?' } %>

